<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="WeatherMapApp.Views.ForecastPage">

    <StackLayout>
        <Label Text="{Binding Forecast.City.Name}" 
               FontSize="35" 
               TextColor="Black" 
               HorizontalOptions="Center"/>

        <Label Text="{Binding Forecast.List[0].Main.Temp, StringFormat='{0}°'}" 
               FontSize="40" 
               TextColor="Black" 
               HorizontalOptions="Center"/>
        
        <ListView ItemsSource="{Binding Forecast.List}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding DtTxt.Hour, StringFormat='{0}:00'}"/>
                                <Label Text="{Binding Main.Temp}" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
       
</ContentPage>